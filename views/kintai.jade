extends layout

block content
  h1= title
  a(href='/logout') logout
  a(href='/') index
  table.kintai
    thead.kintai_head
      tr
        th(colspan="4").kintai_year= kintai.year
      tr
        th.kintai_month= kintai.month
        th 開始時間
        th 終了時間
        th 登録タイプ
    tbody.kintai_body
      - var days = Object.keys(kintai.day);
      for day in days
        tr.kintai_days
          td.kintai_day= day
          if(Object.keys(kintai.day[day]).length)
            td
              input(type="text",value=kintai.day[day].startTime).kintai_start_time
            td
              input(type="text",value=kintai.day[day].endTime).kintai_end_time
            td
              input(type="text",value=kintai.day[day].registType).kintai_type
          else
            td
              input(type="text",value="").kintai_start_time
            td
              input(type="text",value="").kintai_end_time
            td
              input(type="text",value="").kintai_type
