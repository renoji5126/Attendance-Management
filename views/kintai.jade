extends layout

block content
  h1= title
  a(href='/logout') logout
  a(href='/') index
  div.kintai
    div.kintai_head
      div.kintai_column.kintai_year= kintai.year
      div.kintai_column.kintai_month= kintai.month
      div.kintai_column.kintai_start_time 開始時間
      div.kintai_column.kintai_end_time 終了時間
      div.kintai_column.kintai_type 登録タイプ
    div.kintai_body
      - var days = Object.keys(kintai.day);
      for day in days
        div.kintai_days
          div.kintai_column.kintai_day= day
          if(Object.keys(kintai.day[day]).length)
            input(type="text",value=kintai.day[day].startTime).kintai_column.kintai_start_time
            input(type="text",value=kintai.day[day].endTime).kintai_column.kintai_end_time
            input(type="text",value=kintai.day[day].registType).kintai_column.kintai_type
          else
            input(type="text",value="").kintai_column.kintai_start_time
            input(type="text",value="").kintai_column.kintai_end_time
            input(type="text",value="").kintai_column.kintai_type
